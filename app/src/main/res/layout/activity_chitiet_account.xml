<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ChiTietAcc"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="25dp"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTietAccount">
    <FrameLayout
        android:paddingBottom="15dp"
        android:id="@+id/ly_top"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_back24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Thông tin tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
<TextView
    app:layout_constraintTop_toBottomOf="@+id/ly_top"
    android:textSize="20sp"
    android:id="@+id/tName"
    android:padding="15dp"
    android:background="@color/white"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Họ tên"
    android:layout_width="0dp"
    app:layout_constraintEnd_toStartOf="@+id/Name"
    android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:text="Trịnh Việt Hoàng"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tSDT"
        app:layout_constraintTop_toBottomOf="@+id/ly_top"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tName"
        android:textSize="20sp"
        android:id="@+id/tSDT"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Số điện thoại"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/SDT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:text="0868897306"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tSDT"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tSDT"
        android:textSize="20sp"
        android:id="@+id/tSex"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@+id/Sex"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Giới tính"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/Sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:text="Nam"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tSDT"
        app:layout_constraintTop_toBottomOf="@+id/SDT"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tSex"
        android:textSize="20sp"
        android:id="@+id/tBirthDay"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@+id/BirthDay"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Ngày sinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/BirthDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tSDT"
        app:layout_constraintTop_toBottomOf="@+id/Sex"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tBirthDay"
        android:textSize="20sp"
        android:id="@+id/tEmail"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@+id/BirthDay"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"
        android:singleLine="true"
        android:text="hoangzuka2k2@gmail.com"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tSDT"
        app:layout_constraintTop_toBottomOf="@+id/tBirthDay"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/ly_forgot_pass"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:singleLine="true"
            android:text="Đổi mật khẩu"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tSDT"
            app:layout_constraintTop_toBottomOf="@+id/tBirthDay"
            />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            />
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ly_forgot_pass"
        android:background="#86AEEC"
        android:id="@+id/bt_edit"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_edit_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chỉnh sửa"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
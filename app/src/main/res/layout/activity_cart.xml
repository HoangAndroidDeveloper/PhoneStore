<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_cart"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#329AEC"
        android:padding="15dp">

        <ImageView
            android:id="@+id/bt_back_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/baseline_arrow_back_24_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Giỏ hàng"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAE8E8"
        />
<TextView
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:text="Xóa"
    android:id="@+id/bt_Delete"
    android:visibility="gone"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@drawable/custom_item_version"
    android:layout_gravity="end"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recycler_Cart"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/SelectAllCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua hàng"
            android:textSize="16sp"
            android:id="@+id/bt_Mua_Cart"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@color/red"
            android:textColor="@color/white"
            style="@style/Theme.AppCompat.Light"
            />
    </LinearLayout>
</LinearLayout>
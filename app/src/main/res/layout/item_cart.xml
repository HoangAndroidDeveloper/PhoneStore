<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".activity.MuaActivity">
    <CheckBox
        android:id="@+id/checkboxCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/ImageCart"
        android:src="@color/black"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/NameCart"
            android:textColor="@color/black"
            android:text="iphone 14 promax"
            />

            <TextView
                android:text="Màu vàng (4GB-64GB)"
                android:layout_marginTop="5dp"
                android:background="#E4E1E1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="3dp"
                android:id="@+id/sizeCart"
                android:textColor="@color/black"
                />

        <TextView
            android:text="2.000.000đ"
            android:layout_marginTop="5dp"
            android:id="@+id/moneyCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/gia_dialog"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/bt_giam"
                android:src="@drawable/ic_subtraction_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="1"
                android:id="@+id/sl_dialog"
                android:textSize="22sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/bt_tang"
                android:src="@drawable/ic_plus_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_textMua"
        />
</LinearLayout>
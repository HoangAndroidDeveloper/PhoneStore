<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<RadioButton
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radio_select"
    />
    <TextView
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/radio_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trịnh Việt Hoàng"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:id="@+id/nameKhachHang"
        />


        <TextView
            app:layout_constraintStart_toEndOf="@+id/radio_select"
            app:layout_constraintTop_toBottomOf="@id/nameKhachHang"
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:text="0868897306"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText"
            />
<ImageView
    android:src="@drawable/menu_location"
    android:id="@+id/menu_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:textSize="16sp"
        android:id="@+id/tDiaChi"
        app:layout_constraintStart_toEndOf="@+id/radio_select"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_marginEnd="11dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="#03A9F4"
        />
</LinearLayout>
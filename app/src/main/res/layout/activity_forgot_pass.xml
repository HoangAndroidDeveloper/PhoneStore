<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_forgot_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPass"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#07ABF5"
       >

        <ImageView
            android:id="@+id/bt_back_Mua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_arrow_back_24_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="22sp"
            />
    </FrameLayout>

    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/email"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Hoangzuka2k2@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="DuplicateIds"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_eCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã xác minh"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:endIconMode="clear_text"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_email"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="245dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/bt_sendCode"
        android:text="Gửi lại"
        android:textColor="#047E83"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_ePass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu mới"
        android:layout_marginTop="30dp"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/icons_lock_25"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        tools:layout_editor_absoluteX="23dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ePass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="245dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_eEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Xác nhận mật khẩu"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/icons_lock_25"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ePass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="245dp" />
    </com.google.android.material.textfield.TextInputLayout>

<View
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Đổi mật khẩu"
        android:id="@+id/bt_forgot"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="#25D9E1"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        />
</LinearLayout>
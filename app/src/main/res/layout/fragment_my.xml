<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
        <LinearLayout
            android:layout_marginBottom="25dp"
            android:layout_marginStart="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="40pt"
                app:cardCornerRadius="20pt"
                android:layout_height="40pt"

                >
                <ImageView
                    android:src="@drawable/img"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/avatar"
                    android:layout_height="match_parent"
                    />
            </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12pt"
                    android:id="@+id/name"
                    android:text="Trịnh Việt Hoàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginEnd="10pt"
            android:layout_marginStart="10pt"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:id="@+id/bt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            >
            <ImageView
                android:src="@drawable/ic_person30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginStart="10pt"
                android:layout_weight="1"
                android:text="Thông tin tài khoản"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:src="@drawable/ic_arrow_forward_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginEnd="10pt"
            android:layout_marginStart="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            >
            <ImageView
                android:src="@drawable/ic_order_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginStart="10pt"
                android:layout_weight="1"
                android:text="Đơn hàng"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:src="@drawable/ic_arrow_forward_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginEnd="10pt"
            android:layout_marginStart="10pt"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            >
            <ImageView
                android:src="@drawable/ic_rating30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginStart="10pt"
                android:layout_weight="1"
                android:text="Đánh giá"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:src="@drawable/ic_arrow_forward_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

<View
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    />
        <LinearLayout
            android:id="@+id/bt_Logout"
            android:layout_marginTop="10pt"
            android:layout_marginStart="10pt"
            android:layout_marginEnd="10pt"
            android:background="@drawable/bacground_bt_logout"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="10pt"
            android:layout_height="wrap_content"
            android:paddingTop="5pt"
            android:paddingBottom="5pt"
            tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:src="@drawable/ic_logout30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginStart="10pt"
                    android:layout_weight="1"
                    android:text="Đăng xuất"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText,InefficientWeight" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChiTietSPActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/ChiTietSP"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <androidx.cardview.widget.CardView
            android:backgroundTint="#EEEEEE"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/bt_back_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_arrow_back_24"
                />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <androidx.cardview.widget.CardView
            android:backgroundTint="#EEEEEE"
            android:layout_width="40dp"
            android:id="@+id/bt_gioHang_shop"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_cart_24"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:backgroundTint="#EEEEEE"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="15dp"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_share_30"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
<androidx.core.widget.NestedScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


            <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/List_image_SP"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                />
<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/List_image_SP"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="20dp"
    android:id="@+id/ly_name"
    >
    <TextView
        android:id="@+id/nameSP"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="iphone 15 promax"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/SLDaban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã bán 4,5k"
        android:layout_gravity="center"
        android:maxLines="1"
        android:layout_marginStart="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ChiTietSP"
        app:layout_constraintTop_toBottomOf="@id/List_image_SP"
        />
</LinearLayout>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/money_sp"
        android:text="30.000.000đ"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ly_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <RatingBar
        android:progressTint="#FFEB3B"
        android:progressBackgroundTint="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/numberStart"
        app:layout_constraintTop_toBottomOf="@+id/money_sp"
        android:id="@+id/ratingbar"
        android:numStars="5"
        android:transformPivotX="0dp"
        android:scaleX="0.5"
        android:rating="4"
        android:transformPivotY="0dp"
        android:isIndicator="true"
        android:clickable="false"
        android:stepSize="1"
        android:scaleY="0.5"
        android:layout_marginStart="10dp"
        android:padding="0dp"
        android:layout_marginEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:text="4.5"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/numberStart"
        app:layout_constraintTop_toBottomOf="@id/money_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/ly_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberStart"
        >
    <TextView
        android:layout_gravity="center"
        android:text="Màu sắc"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/tColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rColor"
        android:layout_marginStart="15sp"
        app:layout_constraintStart_toEndOf="@id/tColor"
        app:layout_constraintTop_toBottomOf="@+id/ratingbar"
        />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_ram"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ly_color"
        >
    <TextView
        android:layout_gravity="center"
        android:text="Phiên bản"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/tRam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rRam"
        android:layout_marginStart="15dp"
        />
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ly_ram"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab"
            android:id="@+id/MoTa"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ly_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/bt_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bt_add_cart_unselect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_cart_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_mua"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bt_mua_unselect"
            android:clickable="true"
            android:enabled="false"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Mua ngay"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_bottom_sheet"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    >


<ImageView
    android:src="@drawable/img_1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/imageSP_dialog"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    />

    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name_dialog"
        android:id="@+id/color_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageSP_dialog"
        />
    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageSP_dialog"
        android:text="Tên: Vsmart joy 4"
        />
    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ram_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/color_dialog"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageSP_dialog"
        />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@+id/sl_kho_dialog"
                android:id="@+id/gia_dialog"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageSP_dialog"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:text="Giá: 256.000đ"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/imageSP_dialog"
                app:layout_constraintTop_toBottomOf="@+id/ram_dialog"
                android:text="Kho: 2500"
                android:id="@+id/sl_kho_dialog"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
    <TextView
        android:id="@+id/t_sl_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gia_dialog"
        android:text="Số lượng"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
<LinearLayout
    android:layout_marginEnd="10dp"
    app:layout_constraintTop_toBottomOf="@id/gia_dialog"
    android:layout_marginTop="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/bt_giam"
        android:src="@drawable/ic_subtraction_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="1"
        android:id="@+id/sl_dialog"
        android:textSize="22sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/bt_tang"
        android:src="@drawable/ic_plus_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/bt_close_sheet"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginStart="90dp"
            android:src="@drawable/baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/t_sl_dialog"
        android:background="@color/red"
        android:textColor="@color/white"
        style="@style/Theme.AppCompat"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Mua ngay"
        android:id="@+id/bt_mua_sheet"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ly_DsLocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#07ABF5"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bt_back_DsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/baseline_arrow_back_24_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Địa chỉ nhận hàng"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rDsLocation"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            />

        <TextView
            android:background="@color/white"
            android:paddingTop="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_addLocation"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ mới"
            android:textColor="@color/black"
            android:paddingBottom="15dp"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn"
            android:id="@+id/bt_selectLocation"
            android:padding="20dp"
            android:backgroundTint="#FF424E"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>